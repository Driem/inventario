<p id="notice"><%= notice %></p>

<h1>Ventas</h1>

<table>
  <thead>
    <tr>
      <th>Producto</th>
      <th>Fecha </th>
      <th>Cantidad</th>
      <th>Total</th>
      <th>Cliente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sells.each do |sell| %>
      <tr>
        <td><%= sell.product.nombre %></td>
        <td><%= sell.fecha_v %></td>
        <td><%= sell.cantidad %></td>
        <td><%= sell.total %></td>
        <td><%= sell.client.nombre %></td>
        <td><%= link_to 'Mostrar', sell %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva venta', new_sell_path %>
